<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date{dd.MM.yy HH:mm:ss} %-5level [%logger{0}.%method@%thread] %message%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>

    <logger name="de.befrish.testdatamt" level="ERROR" />

</configuration>